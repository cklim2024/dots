#  {{ include "private_dot_config/systemd/user/distrobox-fedora-oneshot.service.tmpl" | sha256sum }}
systemctl --user daemon-reload

_services=(
  distrobox-arch-oneshot.service
  distrobox-fedora-oneshot.service
)

for service in "${_services[@]}"; do
  print_info "${service} status: "
  if ! systemctl is-enabled "${service}"; then
    printf
    print_success "enabling ${service}\n    follow: journalctl --user -exu'${service}'    status: systemctl status --user ${service}"
    (systemctl enable --now "${service}" &)
  fi
done


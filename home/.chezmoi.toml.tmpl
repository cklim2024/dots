{{ $githubUser     := "scottames" -}}
{{ $chassis        := ""          -}}
{{ $isContainer    := false       -}}
{{ $isDistroBox    := false       -}}
{{ $desktopSession := env "DESKTOP_SESSION" -}}
{{ $hourDark       := 19 -}}
{{ $hourLight      := 7 -}}

{{ $loginSession     := 0 -}}
{{ $loginSessionType := "" -}}

{{- if eq .chezmoi.os "linux" -}}
{{-   if or (lstat "/.dockerenv") (lstat "/run/.containerenv") -}}
{{-     $isContainer = true -}}
{{-   end -}}
{{-   if and $isContainer (lookPath "distrobox-host-exec")  -}}
{{-     $isDistroBox = true -}}
{{-   end -}}
{{-   if $isDistroBox -}}
{{-     $chassis = output "distrobox-host-exec" "hostnamectl" "chassis" | trim -}}
{{      $loginSession = output "distrobox-host-exec" "loginctl" "-o" "json" | fromJson | jq (printf ".[] | select(.user==\"%s\") | .session" .chezmoi.username) | first }}
{{      $loginSessionType = output "distrobox-host-exec" "loginctl" "show-session" $loginSession "-p" "Type" | replace "Type=" "" | trim -}}
{{-   else if $isContainer -}}
{{-     $chassis = "container" }}
{{-   else -}}
{{-     $chassis = output "hostnamectl" "chassis" | trim -}}
{{-   end -}}
{{- end -}}

sourceDir = "{{ .chezmoi.homeDir }}/src/{{ $githubUser }}/dots/home"
progress = true

{{ if lookPath "delta" -}}
[diff]
  pager = "delta"
  command = "delta"
  args = ["--paging", "never"]
  exclude = ["dirs", "scripts"]

{{ end -}}
[data]
  chassis = "{{       $chassis }}"
  chezmoi_home = "{{ .chezmoi.homeDir }}/src/{{ $githubUser }}/dots/home"
  hour_dark = {{ $hourDark }}
  hour_light = {{ $hourLight }}
  desktop_session = "{{ $desktopSession }}"
  login_session = {{ $loginSession }}
  login_session_type = "{{ $loginSessionType }}"

  [data.me]
    user = "{{ .chezmoi.username }}"
    email = "scott@ames.sh"
    name = "Scott Ames"
    [data.me.github]
      username = "{{  $githubUser }}"

